extends layout

block content
    .w3-row.flex-box
        .w3-quarter.flex-box.flex-center.w3-blue-grey.full-height-div
            a.w3-button.w3-round.w3-grey.w3-margin.w3-padding.w3-center(href="/") Voltar
        
        header.w3-half.w3-container.w3-blue-grey.w3-center
            h3= data.nome

        .w3-quarter.flex-box.flex-center.w3-blue-grey.full-height-div

    main.margin-16 
        p Idade: #{data.idade}
        p Sexo: #{data.sexo}
        p Morada: #{data.morada.cidade}, #{data.morada.distrito}

        p Profissão: #{data.profissao}
        p Marca Carro: #{data.marca_carro}

        p Partido político: #{data.partido_politico.party_name} (#{data.partido_politico.party_abbr})

        p Fumador: 
            if data.atributos.fumador
                | Sim
            else 
                | Não
        
        p Gosta de cinema: 
            if data.atributos.gosta_cinema
                | Sim
            else 
                | Não
        
        p Gosta de viajar: 
            if data.atributos.gosta_viajar
                | Sim
            else 
                | Não
        
        p Acorda cedo: 
            if data.atributos.acorda_cedo
                | Sim
            else 
                | Não
        
        p Gosta de ler: 
            if data.atributos.gosta_ler
                | Sim
            else 
                | Não
        
        p Gosta de música: 
            if data.atributos.gosta_musica
                | Sim
            else 
                | Não
        
        p Gosta de comer: 
            if data.atributos.gosta_comer
                | Sim
            else 
                | Não
        
        p Gosta de animais estimação: 
            if data.atributos.gosta_animais_estimacao
                | Sim
            else 
                | Não
        
        p Gosta de dancar: 
            if data.atributos.gosta_dancar
                | Sim
            else 
                | Não

        p Comida favorita: #{data.atributos.comida_favorita}

        p Desportos:
        ul 
            for obj in data.desportos
                li= obj

        p Animais:
        ul 
            for obj in data.animais
                li= obj

        p Figura Pública Portuguesa:
        ul 
            for obj in data.figura_publica_pt
                li= obj

        p Destinos Favoritos:
        ul 
            for obj in data.destinos_favoritos
                li= obj


        p Descrição: #{data.descricao}


    footer.w3-container.w3-blue-grey
        h5 Generated by FichaAferição::EngWeb2024::A100695 