extends layout

block content
    .w3-row.flex-box
        .w3-quarter.flex-box.flex-center.w3-blue-grey.full-height-div
        
        header.w3-half.w3-container.w3-blue-grey.w3-center
            h3= title

        .w3-quarter.flex-box.flex-center.w3-blue-grey.full-height-div
            a.w3-button.w3-round.w3-grey.w3-margin.w3-padding.w3-center(href="/add") +

    .flex-box.flex-center
        table.w3-striped
            thead 
                tr
                    for h in headers 
                        th=h

            tbody
                for obj in data
                    tr
                        for h in headers
                            td=obj[h]

                        td
                            .flex-box.flex-center
                                a.w3-center.w3-button.w3-blue(href=`/${obj._id}`) See more
                                a.w3-center.w3-button.w3-green(href=`/edit/${obj._id}`) Edit
                                a.w3-center.w3-button.w3-red(href=`/delete/${obj._id}`) Delete


    footer.w3-container.w3-blue-grey
