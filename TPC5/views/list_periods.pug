extends layout 

block content 
    .w3-row.flex-box

        .w3-quarter.flex-box.flex-center.w3-blue-grey.full-height-div
            .flex-box.flex-center.flex-column
                a.w3-center(href="/") Voltar
        
        header.w3-half.w3-container.w3-blue-grey.w3-center
            h3= title

        .w3-quarter.flex-box.flex-center.w3-blue-grey.full-height-div
            a.w3-button.w3-round.w3-grey.w3-margin.w3-padding.w3-center(href="/periodos/add") +

    .flex-box.flex-center
        ul.no-padding-inline-start.no-mark-list.w3-margin.flex-box.flex-column.space-evenly(style="width:50%")

            each p in periodos
                li 
                    .w3-light-blue.w3-margin.w3-padding.w3-card-4.flex-box.space-between
                        a.w3-center(href=`/periodos/${p.id}`)= p.id
                            div
                                a.w3-center(href=`/periodos/edit/${p.id}`) [Edit]

                                - var empty = p.compositores.length == 0

                                if empty
                                    a.w3-center(href=`/periodos/delete/${p.id}`) [Delete]

    footer.w3-container.w3-blue-grey
        h5 Generated by CompositoresApp::EngWeb2024::A100695
            a.w3-center(href="/") [Voltar à página principal]