extends layout 

block content 
    .w3-row.flex-box

        .w3-quarter.flex-box.flex-center.w3-blue-grey.full-height-div
            .flex-box.flex-center.flex-column
                a.w3-center(href="/periodos") Voltar

        header.w3-half.w3-container.w3-blue-grey.w3-center
            h3= period.id

        .w3-quarter.flex-box.flex-center.w3-blue-grey.full-height-div

    main.w3-margin.w3-padding
        .w3-container.w3-center
            p
                b Início:
                | #{period.start}

            p
                b Fim:
                | #{period.end}

        .flex-box.flex-center
            header.w3-container.w3-blue-grey.w3-center.w3-margin
                p
                    b Compositores

            - var empty = period.compositores

            if empty 
                
                ul.no-mark-list.w3-margin.w3-padding.flex-box.flex-column.space-evenly(style="width:50%")

                    each c in period.compositores
                        li
                            .w3-light-blue.w3-margin.w3-padding.w3-card-4.flex-box.flex-center
                                a.w3-center(href=`/compositores/${c.id}`)= c.nome

    footer.w3-container.w3-blue-grey
        h5 Generated by CompositoresApp::EngWeb2024::A100695
            a.w3-center(href="/") [Voltar à página principal]