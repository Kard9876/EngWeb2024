extends layout 

block content 
    .w3-row.flex-box

        .w3-quarter.flex-box.flex-center.w3-blue-grey.full-height-div
            
        header.w3-half.w3-container.w3-blue-grey.w3-center
            h3= title

        .w3-quarter.flex-box.flex-center.w3-blue-grey.full-height-div

    main.w3-margin.w3-padding
        form(method="POST" action="/compositores/add" enctype="application/x-www-form-urlencoded")
            fieldset
                legend Dados
                
                label Id
                input.w3-input.w3-round(type="text" name="_id" pattern="C[0-9]+")
                br

                label Nome
                input.w3-input.w3-round(type="text" name="nome")
                br

                label Data de Nascimento
                input.w3-input.w3-round(type="text" name="dataNasc")
                br

                label Data de Óbito
                input.w3-input.w3-round(type="text" name="dataObito")
                br

                label Período
                input.w3-input.w3-round(type="text" name="periodo")
                br

                .flex-box.flex-column
                    label Biografia
                    textarea(id="biografia" name="bio" rows="10" cols="50")
                br

            .w3-margin.w3-padding.flex-box.space-evenly
                a.w3-button.w3-round.w3-blue-grey(href="/compositores") Cancelar
                button.w3-button.w3-round.w3-blue-grey(type="submit") Guardar Alterações

    footer.w3-container.w3-blue-grey
        h5 Generated by CompositoresApp::EngWeb2024::A100695 
            a.w3-center(href="/") [Voltar à página principal]