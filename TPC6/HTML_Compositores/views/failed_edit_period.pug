extends layout 

block content 
    .w3-row.flex-box

        .w3-quarter.flex-box.flex-center.w3-blue-grey.full-height-div
            
        header.w3-half.w3-container.w3-blue-grey.w3-center
            h3= title

        .w3-quarter.flex-box.flex-center.w3-blue-grey.full-height-div

    .w3-panel.w3-red.w3-margin.w3-padding
        h3 Edição revertida!
        p Não é permitido modificar o identificador do período.

    main.w3-margin.w3-padding
        form(method="POST" action=`/periodos/edit/${period._id}` enctype="application/x-www-form-urlencoded")
            fieldset
                legend Dados

                label Id
                input.w3-input.w3-round(type="text" name="_id" value=`${period._id}`)
                br

                label Início
                input.w3-input.w3-round(type="text" name="start" value=`${period.start}`)
                br

                label Fim
                input.w3-input.w3-round(type="text" name="end" value=`${period.end}`)
                br

            .w3-margin.w3-padding.flex-box.space-evenly
                a.w3-button.w3-round.w3-blue-grey(href="/periodos") Cancelar
                button.w3-button.w3-round.w3-blue-grey(type="submit") Guardar Alterações

    footer.w3-container.w3-blue-grey
        h5 Generated by CompositoresApp::EngWeb2024::A100695
            a.w3-center(href="/") [Voltar à página principal]